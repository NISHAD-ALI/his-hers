        </main><!-- End .main -->
        <script>
            function addToWishlist(productId) {
                // Prevent the default behavior of the link
                event.preventDefault();

                $.ajax({
                    url: '/addToWishlist',
                    type: 'POST',
                    data: { id: productId },
                    success: function (data) {
                        if (data.result) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Added to Wishlist!',
                                text: 'Product has been added to your Wishlist successfully!',
                            });
                        } else {
                            Swal.fire({
                                icon: 'info',
                                title: 'Failed to Add to Wishlist',
                                text: 'Product may already be in the Wishlist.',
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Error adding to Wishlist. Please try again later.',
                        });
                    }
                });
            }

            function addToCart(productId) {
                $.ajax({
                    url: "/addToCart",
                    method: "post",
                    data: {
                        id: productId,
                    },
                    success: (response) => {
                        if (response.login === true) {
                            Swal.fire({
                                icon: "warning",
                                title: "Please Login",
                                confirmButtonColor: "#3085d6",
                                confirmButtonText: "Login",
                                showCancelButton: true,
                                cancelButtonColor: "#d33",
                                text: response.message,
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = "/login";
                                }
                            });
                        } else if (response.result) {
                            Swal.fire({
                                icon: "success",
                                title: "Product Added to Cart",
                                text: "Your product has been added to the cart.",
                            }).then(() => {
                                window.location.href = "/cart";
                            });
                        } else if (response.alreadyAdded) {
                            Swal.fire({
                                icon: "info",
                                title: "Already Added to Cart",
                                text: "Count of the product has been Incremented.",
                            });
                        } else {
                            Swal.fire({
                                icon: "error",
                                title: "Sorry, product is Out Of Stock",
                                text: response.message,
                            });
                        }
                    },
                });
            }
        </script>
