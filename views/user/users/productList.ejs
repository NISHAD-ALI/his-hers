                    <div class="toolbox">
                        <div class="toolbox-left">
                            <a href="#" class="sidebar-toggler" data-toggle="modal" data-target="#filtersModal">
                                <i class="icon-bars"></i> Filters
                            </a>

                            <!--  FILTER      -->
<div class="modal fade" id="filtersModal" tabindex="-1" role="dialog" aria-labelledby="filtersModalLabel"
aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <form action="/filter" method="post" id="filtersForm">
            <div class="modal-header">
                <h5 class="modal-title" id="filtersModalLabel">Filters</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <h6>Categories</h6>
                <div class="row">
                    <% availableCategories?.forEach(category => { %>
                    <div class="col-6 col-sm-4">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input category-checkbox"
                                id="category<%= category.id %>" value="<%= category.name %>" name="categories">
                            <label class="form-check-label" for="category<%= category.id %>"><%= category.name %></label>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <!-- Add other filter options as needed -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary apply-filters-btn">Apply Filters</button>
            </div>
        </form>
    </div>
</div>
</div>




                        </div><!-- End .toolbox-left -->

                        <div class="toolbox-center">
                            <div class="toolbox-info">
                                <!-- PAGINATION -->
                                <!-- Showing <span>12 of 56</span> Products -->
                            </div><!-- End .toolbox-info -->
                        </div><!-- End .toolbox-center -->


                    </div><!-- End .toolbox -->
                    <!-- PRODUCTS -->
                    <div id="productListContainer" class="products">

                        <div class="products">
                            <div class="row">
                                <div class="row">
                                    <% products.forEach((product, i)=> { %>
                                        <div class="col-6 col-md-4 col-lg-4 col-xl-3">
                                            <div class="product">
                                                <figure class="product-media">
                                                    <% const productDiscount=discPrice.find(x=> x.product.toString() ===
                                                        product._id.toString() && x.is_block === 0); %>
                                                        <% let smallestPrice=Math.min(product.price,
                                                            product.discountPricepro || Infinity,
                                                            product.discountPricecat || Infinity); %>
                                                            <% if (productDiscount) { %>
                                                                <span class="product-label label-new">
                                                                    <%= productDiscount.percentage %>% off
                                                                </span>
                                                                <% } %>
                                                                    <a href="/productView?id=<%= product._id %>">
                                                                        <img src="/products/images/<%= product.image[0] %>"
                                                                            alt="">
                                                                    </a>
                                                                    <div class="product-action action-icon-top">
                                                                        <a onclick="addToCart('<%= product._id %>')"
                                                                            class="btn-product btn-cart"><span>add to
                                                                                cart</span></a>

                                                                    </div><!-- End .product-action -->
                                                </figure>
                                                <div class="product-body">
                                                    <div class="product-cat">
                                                        <a href="#">
                                                            <%= product.category %>
                                                        </a>
                                                    </div>
                                                    <h3 class="product-title">
                                                        <a href="product.html">
                                                            <%= product.productname %>
                                                        </a>
                                                    </h3>

                                                    <div class="product-price">
                                                        <% if (smallestPrice && smallestPrice < product.price) { %>
                                                            <strike>₹<%= product.price %></strike>
                                                    </div>
                                                    <div class="product-price">
                                                        <b>₹<%= smallestPrice %></b>
                                                        <% } else { %>
                                                            ₹<%= product.price %>
                                                                <% } %>
                                                    </div>


                                                </div>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                            </div>
                        </div>
                        <!-- Your existing product list code goes here -->
                    </div </div><!-- End .container -->
                </div><!-- End .page-content -->
            </div>

        </main><!-- End .main -->


        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


       
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const searchToggle = document.querySelector('.search-toggle');
                const searchModal = $('#searchModal');
                const productNameInput = $('#productName');
                const searchButton = $('#searchButton');
                const productListContainer = $('#productListContainer');

                searchToggle.addEventListener('click', function () {
                    searchModal.modal('show');
                });

                searchButton.on('click', function () {
                    const searchData = productNameInput.val();
                    console.log(searchData);
                    searchProducts(searchData);
                    searchModal.modal('hide');
                });

                function searchProducts(searchData) {
                    $.ajax({
                        url: '/searchProducts',
                        method: 'GET',
                        data: { searchdata: searchData },
                        success: function (data) {
                            const productListHtml = $(data).find('#productListContainer').html();
                            productListContainer.html(productListHtml);
                        },
                        error: function (error) {
                            console.error(error);
                        }
                    });
                }
            });
        </script>

        <script>
            function addToCart(productId) {
                $.ajax({
                    url: "/addToCart",
                    method: "post",
                    data: {
                        id: productId,
                    },
                    success: (response) => {
                        if (response.login === true) {

                            Swal.fire({
                                icon: "warning",
                                title: "Please Login",
                                confirmButtonColor: "#3085d6",
                                confirmButtonText: "Login",
                                showCancelButton: true,
                                cancelButtonColor: "#d33",
                                text: response.message,
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = "/login";
                                }
                            });
                        } else if (response.result) {

                            Swal.fire({
                                icon: "success",
                                title: "Product Added to Cart",
                                text: "Your product has been added to the cart.",

                            }).then(() => {
                                window.location.href = "/cart";
                            });
                        } else if (response.alreadyAdded) {
                            Swal.fire({
                                icon: "info",
                                title: "Already Added to Cart",
                                text: "Count of the product has been Incremented.",
                            });
                        } else {
                            Swal.fire({
                                icon: "error",
                                title: "Sorry, product is Out Of Stock",
                                text: response.message,
                            });
                        }
                    },
                });
            }
        </script>
