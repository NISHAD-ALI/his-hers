<%- include('../layout/header.ejs') -%>

    <div class="page-wrapper">



        <main class="main">
            <div class="page-header text-center" style="background-image: url('user/images/banners/aa.jpg')">
                <div class="container">
                    <h1 class="page-title">Her's Arena<span>Shop</span></h1>
                </div><!-- End .container -->
            </div><!-- End .page-header -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav mb-2">
                <div class="container">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/categorywoMen">Shop</a></li>

                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
                <div class="container">
                    <div class="toolbox">
                        <div class="toolbox-left">
                            <!-- <a href="#" class="sidebar-toggler" data-toggle="modal" data-target="#filtersModal">
                                <i class="icon-bars"></i> Filters
                            </a> -->

                     
                            <!--  FILTER      -->
<div class="modal fade" id="filtersModal" tabindex="-1" role="dialog" aria-labelledby="filtersModalLabel"
aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <form action="/filter" method="post" id="filtersForm">
            <div class="modal-header">
                <h5 class="modal-title" id="filtersModalLabel">Filters</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <h6>Categories</h6>
                <div class="row">
                    <% availableCategories?.forEach(category => { %>
                    <div class="col-6 col-sm-4">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input category-checkbox"
                                id="category<%= category.id %>" value="<%= category.name %>" name="categories">
                            <label class="form-check-label" for="category<%= category.id %>"><%= category.name %></label>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <!-- Add other filter options as needed -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary apply-filters-btn">Apply Filters</button>
            </div>
        </form>
    </div>
</div>
</div>



                        </div><!-- End .toolbox-left -->

                        <div class="toolbox-center">
                            <div class="toolbox-info">
                                <!-- PAGINATION -->
                                <!-- Showing <span>12 of 56</span> Products -->
                            </div><!-- End .toolbox-info -->
                        </div><!-- End .toolbox-center -->




                    </div><!-- End .toolbox -->
                    <!-- PRODUCTS -->
                    <div class="products">
                        <div class="row">
                            <div class="row">
                                <% products.forEach((product, i)=> { %>
                                    <div class="col-6 col-md-4 col-lg-4 col-xl-3">
                                        <div class="product">
                                            <figure class="product-media">
                                                <% const productDiscount=discPrice.find(x=> x.product.toString() ===
                                                    product._id.toString() && x.is_block === 0); %>
                                                    <% if (productDiscount) { %>
                                                        <span class="product-label label-new">
                                                            <%= productDiscount.percentage %>% off
                                                        </span>
                                                        <% } %>
                                                            <a href="/productView?id=<%= product._id %>">
                                                                <img src="/products/images/<%= product.image[0] %>"
                                                                    alt="">
                                                            </a>
                                                            <div class="product-action action-icon-top">
                                                                <a onclick="addToCart('<%= product._id %>')"
                                                                    class="btn-product btn-cart"><span>add to
                                                                        cart</span></a>
    
                                                            </div><!-- End .product-action -->
                                            </figure>
                                            <div class="product-body">
                                                <div class="product-cat">
                                                    <a href="#">
                                                        <%= product.category %>
                                                    </a>
                                                </div>
                                                <h3 class="product-title">
                                                    <a href="product.html">
                                                        <%= product.productname %>
                                                    </a>
                                                </h3>
                                                <% if (product.discountPricepro && productDiscount) { %>
                                                    <div class="product-price">
                                                        <strike>₹<%= product.price %></strike>
                                                    </div>
                                                    <div class="product-price">
                                                        <b>₹<%= product.discountPricepro %></b>
                                                    </div>
                                                    <% } else { %>
                                                        <div class="product-price">
                                                            ₹<%= product.price %>
                                                        </div>
                                                        <% } %>
                                                            <div class="ratings-container">
                                                                <div class="ratings">
                                                                    <div class="ratings-val"
                                                                        style="width: <%= (product.ratings * 20) %>%;">
                                                                    </div>
                                                                </div>
                                                                <span class="ratings-text">( <%= product.ratings %>
                                                                        Reviews )</span>
                                                            </div>
                                                            <div class="product-nav product-nav-dots">
                                                                <a href="#" style="background: <%= product.color %>;">
                                                                    <span class="sr-only">Color name</span>
                                                                </a>

                                                            </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                        </div>

                    </div>

                </div><!-- End .container -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->

        <script>
            function addToCart(productId) {
                $.ajax({
                    url: "/addToCart",
                    method: "post",
                    data: {
                        id: productId,
                    },
                    success: (response) => {
                        if (response.login === true) {
        
                            Swal.fire({
                                icon: "warning",
                                title: "Please Login",
                                confirmButtonColor: "#3085d6",
                                confirmButtonText: "Login",
                                showCancelButton: true,
                                cancelButtonColor: "#d33",
                                text: response.message,
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = "/login";
                                }
                            });
                        } else if (response.result) {
        
                            Swal.fire({
                                icon: "success",
                                title: "Product Added to Cart",
                                text: "Your product has been added to the cart.",
        
                            }).then(() => {
                                window.location.href = "/cart";
                            });
                        } else if (response.alreadyAdded) {
                            Swal.fire({
                                icon: "info",
                                title: "Already Added to Cart",
                                text: "Count of the product has been Incremented.",
                            });
                        } else {
                            Swal.fire({
                                icon: "error",
                                title: "Sorry, product is Out Of Stock",
                                text: response.message,
                            });
                        }
                    },
                });
            }
        </script>

        <%- include('../layout/footer.ejs') -%>