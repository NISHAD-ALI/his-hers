async function copyToClipboard(couponId) {
        try {
            var textToCopy = document.getElementById(couponId).textContent;

            await navigator.clipboard.writeText(textToCopy);

            // Use SweetAlert for a stylish alert
            Swal.fire({
                icon: 'success',
                title: 'Coupon Copied!',
                text: 'The coupon has been copied to the clipboard.',
            });
        } catch (error) {
            console.error('Unable to copy coupon to clipboard:', error);
            // Use SweetAlert for error handling
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Something went wrong while copying the coupon!',
            });
        }
    }

// In your client-side script
$(document).ready(function () {
    $('#applyCouponForm').submit(function (event) {
        event.preventDefault();
        var formData = $(this).serializeArray();

        $.ajax({
            url: '/applyCoupon',
            method: 'POST',
            data: formData,
            success: function (response) {
                if (response.success === true) {
                    // Update the total amount on the page
                    $('#total').text('$' + response.discountedTotal);
                    $('#couponDiscountAmount').text('- ₹' + response.couponDiscountAmount);
                    Swal.fire({
                        icon: 'success',
                        title: 'Coupon Applied!',
                        text: 'The coupon has been applied successfully.',
                    });
                } else if (response.alreadyClaimed === true) {
                    // Show a SweetAlert for already claimed coupon
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'You have already claimed this coupon.',
                    });
                } else {
                    // Show a SweetAlert for other errors
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: response.message,
                    });
                }
            },
            error: function (error) {
                console.error('Error:', error);
            }
        });
    });
});



  </script>


