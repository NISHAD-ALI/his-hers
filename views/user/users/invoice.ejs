<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    @page {
      size: A4;
      margin: 20mm;
    }

    .invoice {
      width: 100%;
      padding: 20px;
      box-sizing: border-box;
      position: relative;
    }

    .header {
      text-align: center;
      margin-bottom: 20px;
    }

    .logo {
      max-width: 100px;
      margin: 0 auto;
      display: block;
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
    }

    .details {
      margin-bottom: 20px;
    }

    .items-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    .items-table th, .items-table td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }

    .total {
      margin-top: 20px;
      text-align: right;
    }

    .additional-text {
      margin-top: 10px;
      text-align: center;
    }
  </style>
</head>
<body>

<div class="invoice">
  <div class="header">
    <h1>Invoice</h1>
  </div>
<%= let address =order.deliveryDetails  %>
<% for(let i=0;i<address.length;i++%>{%>
  <% let addressdata = address[i].address%>
  <% for(let j=0;j<addressdata.length;j++){%>
  <div class="details">
    <p><strong>Order ID:</strong><%= order._id %></p>
    <p><strong>Customer Name:</strong><%= user.name %></p>
    <p><strong>Customer Email:</strong><%= user.email %></p>
    <p><strong>Address:</strong> <%= orderdata[j].name %></p>
    <p><strong>Date:</strong><%= order.purchaseDate.toLocaleDateString('en-US', { year:
      'numeric', month: 'short', day: '2-digit'
      }).replace(/\//g, '-') %></p>
    <p><strong>Payment Mode:</strong><%= order.paymentMethod %></p>
    
  </div>
  <%}%>
  <%}%>


  <table class="items-table">
    <thead>
      <tr>
        <th>#</th>
        <th>Item</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% const products = order.products; %>
      <% for (let i = 0; i < products.length; i++) { %>
        <% const product = products[i].productId; %>
         
      
          <tr>
            <td><%= i + 1 %></td>
            <td><%= product.productname %></td>
            <td><%= product.count %></td>
            <td>$<%= product.price %></td>
            <td>$<%= order.totalAmount %></td>
          </tr>
        <% } %>

    </tbody>
  </table>

  <div class="additional-text">
    <p>This is a Computer Generated Invoice.</p>
  </div>

  

  <div class="total">
    <p><strong>Total:</strong> $130.00</p>
  </div>
</div>
<div class="company-details details">
  <p><strong>HIS&HERS Ltd.</strong> </p>
  <p><strong>6th Avenue</strong></p>
  <p><strong>Manhattan,NY</strong></p>

</div>

<img src="/user/images/logo.jpg" alt="Company Logo" class="logo">

</body>
</html>
