<%- include('../admin/layout/adminSidebar.ejs') -%>
<%- include('../admin/layout/adminHeader.ejs') -%>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Offer Management</h4>
                        <br>
                        <div class="text-right">
                            <a href="/admin/addOff">
                                <button type="button" class="btn btn-success ml-auto" data-toggle="button"
                                    aria-pressed="false" autocomplete="off">
                                    + ADD OFFERS
                                </button>
                            </a>
                        </div>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Product</th>
                                        <th>Offer %</th>
                                        <th>Ending Time</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (offerDB && offerDB.length > 0) { %>
                                    <% for (let i = 0; i < offerDB.length; i++) { %>
                                    <tr>
                                        <td><%= i + 1 %></td>
                                        <td><%= offerDB[i].product %></td>
                                        <td><%= offerDB[i].percentage %> %</td>
                                        <td><%= offerDB[i].expiryDate.toLocaleDateString('en-US', {
                                            year: 'numeric',
                                            month: 'short',
                                            day: '2-digit'
                                            }).replace(/\//g, '-') %></td>
                                        <td>Action</td>
                                    </tr>
                                    <% } %>
                                    <% } else { %>
                                    <tr>
                                        <td colspan="6">Offers Not Found</td>
                                    </tr>
                                    <% } %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../admin/layout/adminFooter.ejs') -%>
